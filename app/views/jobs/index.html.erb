<h1>Listing jobs</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Status</th>
    <th>Browsers</th>
    <th>Suites</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.user_id %></td>
    <td><%= job.name %></td>
    <td><%= job.status %></td>
    <td><%= job.browsers %></td>
    <td><%= job.suites %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) if can? :edit, job %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete if can? :destroy, job %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path if can? :create, Job %>
